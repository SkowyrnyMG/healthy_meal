---
import { Card } from "@/components/ui/card";
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4 md:px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl md:text-5xl">
        Dołącz do tysięcy zadowolonych użytkowników
      </h2>
      <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">Zobacz, co mówią o nas inni</p>
    </div>

    <!-- Placeholder for future testimonials -->
    <!--
      TODO: Add testimonial cards when user testimonials are available
      Structure for each testimonial:
      - User avatar
      - User name
      - Rating (stars)
      - Testimonial text
      - Date
    -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        [1, 2, 3].map((index) => (
          <Card className="flex h-48 items-center justify-center border-2 border-dashed border-gray-300 bg-gray-50">
            <div class="text-center text-gray-400">
              <svg class="mx-auto mb-2 h-12 w-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                />
              </svg>
              <p class="text-sm font-medium">Opinia {index}</p>
              <p class="text-xs">Wkrótce dostępne</p>
            </div>
          </Card>
        ))
      }
    </div>

    <!-- Stats placeholders (optional) -->
    <div class="mt-16 grid gap-8 sm:grid-cols-3">
      <div class="text-center">
        <div class="text-4xl font-bold text-green-600">1000+</div>
        <div class="mt-2 text-sm text-gray-600">Użytkowników</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-green-600">5000+</div>
        <div class="mt-2 text-sm text-gray-600">Zmodyfikowanych przepisów</div>
      </div>
      <div class="text-center">
        <div class="text-4xl font-bold text-green-600">4.8/5</div>
        <div class="mt-2 text-sm text-gray-600">Średnia ocena</div>
      </div>
    </div>
  </div>
</section>
