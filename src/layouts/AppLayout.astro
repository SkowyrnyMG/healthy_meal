---
import "../styles/global.css";
import AppHeader from "@/components/app/AppHeader.astro";
import { Toaster } from "sonner";
import type { UserInfo } from "@/components/app/types";

interface Props {
  title?: string;
  showNewRecipeButton?: boolean;
}

const { title = "HealthyMeal", showNewRecipeButton = true } = Astro.props;

// ============================================================================
// AUTHENTICATION CHECK
// ============================================================================

// Get user from locals (set by middleware)
const user = Astro.locals.user;

// Redirect to login if not authenticated
// Note: This is a fallback check - middleware should already handle this
if (!user) {
  return Astro.redirect("/auth/login");
}

// Transform user to UserInfo for AppHeader
const userInfo: UserInfo = {
  userId: user.id,
  email: user.email || "",
  displayName: null, // Will be populated from profile when that feature is implemented
};
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="gradient-bg">
    <!-- Application Header -->
    <AppHeader user={userInfo} showNewRecipeButton={showNewRecipeButton} />

    <!-- Main Content Area -->
    <main class="min-h-[calc(100vh-4rem)]">
      <slot />
    </main>

    <!-- Toast Notifications -->
    <Toaster richColors position="bottom-right" client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    min-height: 100%;
  }
</style>
